{
  "root": true,
  "rules": {
    "import/order": "off"
  },
  "extends": [
    "universe",
    "plugin:prettier/recommended",
    "universe/shared/typescript-analysis"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.d.ts"
      ],
      "parser": "@typescript-eslint/parser"
    }
  ],
  "parserOptions": {
    "project": "./tsconfig.json",
    "sourceType": "module",
    "ecmaVersion": "latest",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
